<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="750.0" prefWidth="850.0" spacing="10" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.exammanager.ExamManagerController">
        <TabPane prefHeight="750.0" prefWidth="850.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Question Creation">
                    <content>
                        <VBox alignment="CENTER" spacing="10">
                  <Label alignment="CENTER" contentDisplay="TOP" prefHeight="67.0" prefWidth="442.0" text="Create a new question" textAlignment="CENTER" textFill="#6100fc" underline="true" wrapText="true">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                            <Label text="Enter new question:" />
                            <TextField fx:id="newQuestionTextField" prefHeight="146.0" prefWidth="850.0" promptText="Enter question here" />
                            <HBox spacing="10">
                                <Label text="Question Points:" />
                                <ChoiceBox fx:id="pointsChoiceBox" />
                            </HBox>
                            <HBox spacing="10">
                                <Label text="Choose existing category:" />
                                <ComboBox fx:id="categoryComboBox" />
                                <Label text="or enter new category name:" />
                                <TextField fx:id="newCategoryTextField" />
                                <Button onAction="#handleAddQuestionToCategory" text="Add question to category" />
                            </HBox>
                        </VBox>
                    </content>
                </Tab>

                <Tab text="Question Management">
                    <content>
                        <VBox alignment="CENTER" spacing="10">
                  <Label alignment="CENTER" contentDisplay="TOP" prefHeight="67.0" prefWidth="442.0" text="Manage your questions" textAlignment="CENTER" textFill="#6100fc" underline="true" wrapText="true">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                            <Label text="Choose category:" />
                            <ComboBox fx:id="categoryComboBox2" prefWidth="150" />
                            <TableView fx:id="questionTable" prefHeight="145.0" prefWidth="780.0">
                                <columns>
                                    <TableColumn fx:id="questionColumn" prefWidth="730.0" text="Questions" />
                                    <TableColumn fx:id="questionColumn1" prefWidth="730.0" text="Points" />
                                </columns>
                            </TableView>
                            <HBox alignment="CENTER" spacing="10">
                                <Button fx:id="editButton" text="Edit Question" />
                                <Button fx:id="deleteButton" text="Delete Question" />
                                <Label text="Choose existing exam:  " />
                                <ComboBox prefWidth="150.0" />
                                <Button fx:id="addQuestionToExamButton" text="Add Question to Exam" />
                            </HBox>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Exam Management">
                    <content>
                        <VBox alignment="CENTER" spacing="10">
                  <Label alignment="CENTER" contentDisplay="TOP" prefHeight="67.0" prefWidth="442.0" text="Create a new exam" textAlignment="CENTER" textFill="#6100fc" underline="true" wrapText="true">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label text="Enter the name of the exam:" />
                  <TextField alignment="CENTER" />
                  <Button graphicTextGap="8.0" mnemonicParsing="false" text="Create new exam" />
                  <Label alignment="CENTER" contentDisplay="TOP" prefHeight="67.0" prefWidth="442.0" text="Manage your exam" textAlignment="CENTER" textFill="#6100fc" underline="true" wrapText="true">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                            <Label text="Choose existent exam: " />
                            <ComboBox fx:id="examComboBox" prefWidth="150.0" />
                            <VBox alignment="CENTER">
                                <TableView fx:id="examTable" prefHeight="192.0" prefWidth="800.0">
                                    <columns>
                                        <TableColumn fx:id="examColumn" prefWidth="730.0" text="                                   Exams" />
                                    </columns>
                                </TableView>
                            </VBox>
                            <HBox alignment="CENTER" spacing="10">
                                <Label text="Total points:" />
                                <ChoiceBox prefWidth="150.0" />
                                <Label text="Number of groups:" />
                                <ChoiceBox prefWidth="150.0" />
                                <Button graphicTextGap="8.0" mnemonicParsing="false" text="Generate Exam" />
                            </HBox>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </VBox>
